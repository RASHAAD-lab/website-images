<body>
  <h1>üê± Cats Follow the Mouse! üê≠</h1>

  <div class="mouse-cursor"></div>

  <script>
    const mouseCursor = document.querySelector('.mouse-cursor');
    let mouseX = window.innerWidth / 2;
    let mouseY = window.innerHeight / 2;

    // Create clouds
    for (let i = 0; i < 8; i++) {
      const cloud = document.createElement('div');
      const size = 60 + Math.random() * 100;
      cloud.classList.add('cloud');
      cloud.style.width = size + 'px';
      cloud.style.height = size * 0.6 + 'px';
      cloud.style.top = Math.random() * 80 + 'vh';
      cloud.style.left = Math.random() * 100 + 'vw';
      cloud.style.animationDuration = (15 + Math.random() * 10) + 's';
      document.body.appendChild(cloud);
    }

    // Create tiny floating cats
    const cats = [];
    for (let i = 0; i < 40; i++) {
      const cat = document.createElement('div');
      cat.classList.add('cat');
      cat.style.left = Math.random() * 100 + 'vw';
      cat.style.top = Math.random() * 100 + 'vh';

      const leftEye = document.createElement('div');
      leftEye.classList.add('eye', 'left');
      const rightEye = document.createElement('div');
      rightEye.classList.add('eye', 'right');

      cat.appendChild(leftEye);
      cat.appendChild(rightEye);
      document.body.appendChild(cat);
      cats.push({ el: cat, x: Math.random() * window.innerWidth, y: Math.random() * window.innerHeight });
    }

    // Move the fake mouse cursor
    document.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
      mouseCursor.style.left = mouseX + 'px';
      mouseCursor.style.top = mouseY + 'px';
    });

    // Animate cats to follow the mouse
    function animateCats() {
      cats.forEach(cat => {
        const dx = mouseX - cat.x;
        const dy = mouseY - cat.y;
        cat.x += dx * 0.02;
        cat.y += dy * 0.02;
        cat.el.style.transform = `translate(${cat.x}px, ${cat.y}px)`;
      });
      requestAnimationFrame(animateCats);
    }

    animateCats();
  </script>
</body>
</html>
