  <title>Cats Follow the Mouse</title>
  <style>
    body {
      background: linear-gradient(to bottom, #aee1f9, #ffffff);
      height: 100vh;
      margin: 0;
      overflow: hidden;
      font-family: 'Comic Sans MS', sans-serif;
      text-align: center;
      cursor: none; /* Hide normal cursor */
    }

    h1 {
      color: #ff66cc;
      margin-top: 10px;
    }

    .cat {
      width: 30px;
      height: 30px;
      background: #ffcc99;
      border-radius: 50% 50% 40% 40%;
      position: absolute;
      animation: colorChange 6s linear infinite;
      transition: transform 0.2s ease-out;
    }

    .cat::before {
      content: '';
      position: absolute;
      width: 8px;
      height: 8px;
      background: #ffcc99;
      border-radius: 50%;
      top: 4px;
      left: -6px;
    }

    .cat::after {
      content: '';
      position: absolute;
      width: 8px;
      height: 8px;
      background: #ffcc99;
      border-radius: 50%;
      top: 4px;
      right: -6px;
    }

    .eye {
      width: 4px;
      height: 4px;
      background: black;
      border-radius: 50%;
      position: absolute;
      top: 10px;
    }

    .eye.left {
      left: 8px;
    }

    .eye.right {
      right: 8px;
    }

    .cloud {
      position: absolute;
      background: white;
      border-radius: 50%;
      opacity: 0.7;
      animation: drift 20s linear infinite;
    }

    .mouse-cursor {
      position: absolute;
      width: 20px;
      height: 30px;
      background: gray;
      border-radius: 50% 50% 40% 40%;
      transform: translate(-50%, -50%);
      pointer-events: none;
      z-index: 1000;
    }

    .mouse-cursor::before {
      content: '';
      position: absolute;
      width: 6px;
      height: 6px;
      background: pink;
      border-radius: 50%;
      top: 5px;
      left: 3px;
    }

    .mouse-cursor::after {
      content: '';
      position: absolute;
      width: 6px;
      height: 6px;
      background: pink;
      border-radius: 50%;
      top: 5px;
      right: 3px;
    }

    @keyframes colorChange {
      0% { background: #ffcc99; }
      25% { background: #ffd1dc; }
      50% { background: #c1f0f6; }
      75% { background: #d1ffd6; }
      100% { background: #ffcc99; }
    }

    @keyframes drift {
      0% { transform: translateX(-100px); }
      100% { transform: translateX(110vw); }
    }
  </style>
